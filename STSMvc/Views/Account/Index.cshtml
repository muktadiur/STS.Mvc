@model Login.Models.Entity.LoginUser
@{
    Layout = "~/Views/Login/_Layout.cshtml";
}
@section title{IMS Pricing Information :: Login}
@section head{
    @Html.Partial("_Head")
}
@section banner{
    @Html.Partial("_Banner")
}
<form method="post">

<div class="login-content">
    <div class="welcome-message">
        <h1>
            Welcome. Please login.</h1>
    </div>
    <div class="content">
        <div class="ui-helper-clearfix login-message">
            <span>@Html.Raw(Model.ValidationMessage)</span>
        </div>
        <div class="ui-helper-clearfix input-group">
            <div class="label">
                User
            </div>
            <div class="input">
                @Html.TextBox("userName", @Model.UserName)
            </div>
        </div>
        <div class="ui-helper-clearfix input-group">
            <div class="label">
                Password
            </div>
            <div class="input">
                @Html.Password("plainPassword", @Model.Password)
            </div>
            <div class="button">
                <input class="login-submit-button ui-button ui-button-text-only ui-widget ui-helper-clearfix"
                    type="submit" value="Login" />
            </div>
        </div>
        <div class="ui-helper-clearfix input-group">
            <div class="label">
                Remember me
            </div>
            <div class="input">
                @Html.CheckBox("IsPersistLogin")
            </div>
        </div>
    </div>
</div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        $('#userName').focus();
        $('.login-submit-button').click(function () {
            var password = $('#plainPassword').val();
            var keyMd5 = $('#hidField').val();
            var hasshedPassword = password;
//            if (!!password) {
//                hasshedPassword = hex_md5(password);
//                hasshedPassword = hex_md5(hasshedPassword + keyMd5);
//            }
            $('#password').val(hasshedPassword);
            return true;
        });
    });
</script>
@section footer{
    @Html.Partial("_Footer")
}
